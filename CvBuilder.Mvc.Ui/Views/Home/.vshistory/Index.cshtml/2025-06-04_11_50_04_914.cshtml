@{
    ViewData["Title"] = "Welkom bij CV Builder";
}

<!-- Bootstrap CSS CDN (optioneel, als nog niet in layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Maak eenvoudig je professionele CV</h1>
        <p class="lead text-muted">Stap voor stap jouw persoonlijke CV opbouwen en direct online beheren.</p>
        <a href="/Cv/Create" class="btn btn-primary btn-lg mt-3">Maak nu je CV</a>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-pencil-square fs-1 text-primary mb-3"></i>
                    <h5 class="card-title">Gemakkelijk invoeren</h5>
                    <p class="card-text">Vul je gegevens in via overzichtelijke formulieren met handige validatie.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-journal-richtext fs-1 text-primary mb-3"></i>
                    <h5 class="card-title">Professionele layouts</h5>
                    <p class="card-text">Bekijk je CV in een nette, moderne stijl die indruk maakt op werkgevers.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-download fs-1 text-primary mb-3"></i>
                    <h5 class="card-title">Download als PDF</h5>
                    <p class="card-text">Sla je CV op of print het eenvoudig uit met onze PDF-exportfunctie.</p>
                </div>
            </div>
        </div>
    </div>
</div>
